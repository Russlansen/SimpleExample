@{
    Layout = null;
}
<!DOCTYPE html>

<html ng-app="MainModule">
<head>
    <link href="~/Content/MainStyles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/mainController.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body ng-controller="MainCtrl">
    <div class="panel panel-default col-sm-offset-4 col-sm-4 main">
        <h1 class="text-center">{{title}}</h1>

        <button class="btn btn-info col-sm-offset-2 col-sm-8" 
                ng-click="getCustomers()">Get all customers</button>
        
        <br /><br />

        <h4 class="text-center">Get customer by ID</h4>
        <input class="col-sm-offset-1 col-sm-6" ng-model="id" type="number" />
        <button class="btn col-sm-4" ng-click="getCustomer()">Get customer</button>
        
        <br /><br />

        <div class="col-sm-12">
            <form name="updateCustomerForm" ng-submit="updateCustomer()" novalidate>
                <h4 class="text-center">Update customer by ID</h4>
                <input class="col-sm-offset-3 col-sm-6" ng-model="customer.Id"
                       type="number" ng-change="idChange()" placeholder="Enter ID" required /><br />

                <input class="col-sm-offset-3 col-sm-6" ng-model="customer.Name"
                       type="text" ng-disabled="updateCustomerForm.$invalid" placeholder="Enter name"/>

                <input class="col-sm-offset-3 col-sm-6" ng-model="customer.Age"
                       type="number" ng-disabled="updateCustomerForm.$invalid" placeholder="Enter age" />
                <br /><br />
                <button class="btn col-sm-offset-3 col-sm-6" type="submit"
                        ng-disabled="updateCustomerForm.$invalid">
                    Update customer
                </button>
            </form>
        </div>

        <br /><br />

        <div class="col-sm-12">
            <form name="addCustomerForm" ng-submit="addCustomer()" novalidate>
                <h4 class="text-center">Add new customer</h4>

                <input class="col-sm-offset-3 col-sm-6" ng-model="newCustomer.Name" 
                       type="text" placeholder="Enter name"/>

                <input class="col-sm-offset-3 col-sm-6" ng-model="newCustomer.Age" 
                       type="number" placeholder="Enter age"/>

                <button class="btn col-sm-offset-3 col-sm-6" 
                        type="submit" ng-disabled="addCustomerForm.$invalid">Add customer</button>
            </form>
        </div>

        <br /><br />

        <div class="col-sm-12">
            <form name="deleteCustomerForm" ng-submit="deleteCustomer()" novalidate>
                <h4 class="text-center">Delete customer</h4>

                <input class="col-sm-offset-1 col-sm-6" ng-change="idChange()" ng-model="idDelete" type="number" />

                <button class="btn btn-danger col-sm-4"
                        type="submit" ng-disabled="deleteCustomerForm.$invalid">
                    Delete customer
                </button>
            </form>
        </div>

        <br /><br />

        <p class="text-center message" ng-if="showMessage">{{message}}</p>

        <table class="table table-striped table-hover">
            <thead style="background: #fc0">
                <tr>
                    <td><b>ID</b></td>
                    <td><b>Name</b></td>
                    <td><b>Age</b></td>
                </tr>
            </thead>
                <tr ng-repeat="customer in getResponse">
                    <td>{{customer.Id}}</td>
                    <td>{{customer.Name}}</td>
                    <td>{{customer.Age}}</td>
                </tr>       
        </table>       
      </div> 
</body>
</html>
